<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MainColorTextLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MainColorTextMedium" parent="MainColorTextLarge">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainColorTextSmall" parent="MainColorTextMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WhiteTextLarge" parent="MainColorTextLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteTextMedium" parent="MainColorTextMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteTextSmall" parent="MainColorTextSmall">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
